<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_construction_bot" model="ir.ui.view">
        <field name="name">res.partner.form.construction.bot</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Construction Bot" name="construction_bot">
                    <group>
                    <group>
                        <field name="telegram_chat_id" string="Telegram ID"/>
                        <field name="construction_role" widget="radio" options="{'horizontal': true}" string="Rol"/>
                    </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
