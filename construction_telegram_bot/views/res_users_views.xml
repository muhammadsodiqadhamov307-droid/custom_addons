<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_construction_bot" model="ir.ui.view">
        <field name="name">res.users.form.construction.bot</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <page string="Construction Bot" name="construction_bot">
                    <group>
                        <field name="construction_role"/>
                        <field name="bot_verification_status"/>
                        <field name="telegram_chat_id"/>
                        <field name="allowed_project_ids" widget="many2many_tags" options="{'no_create': True}"/> 
                        <field name="construction_bot_state" readonly="1"/>
                        <field name="construction_selected_project_id" readonly="1"/>
                        <field name="construction_selected_stage_id" readonly="1"/>
                    </group>
                    <group>
                        <button name="action_register_webhook" type="object" string="ðŸŒ Register Webhook" class="oe_highlight" 
                            confirm="Are you sure you want to register the webhook using current web.base.url and Token?"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
