<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action: Today Only -->
    <record id="action_construction_daily_photo_today" model="ir.actions.act_window">
        <field name="name">Rasmlar (Bugungi)</field>
        <field name="res_model">construction.daily.photo</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('date', '=', context_today())]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Bugungi rasmlarni yuklang
            </p>
        </field>
    </record>

    <!-- Action: All -->
    <record id="action_construction_daily_photo_all" model="ir.actions.act_window">
        <field name="name">Barcha rasmlar</field>
        <field name="res_model">construction.daily.photo</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Rasmlarni yuklang
            </p>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_construction_daily_photo_tree" model="ir.ui.view">
        <field name="name">construction.daily.photo.tree</field>
        <field name="model">construction.daily.photo</field>
        <field name="arch" type="xml">
            <tree string="Rasmlar">
                <field name="name"/>
                <field name="date"/>
                <field name="project_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_construction_daily_photo_form" model="ir.ui.view">
        <field name="name">construction.daily.photo.form</field>
        <field name="model">construction.daily.photo</field>
        <field name="arch" type="xml">
            <form string="Bugungi rasmlar">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Rasmlar">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="image" widget="image" options="{'size': [90, 90]}" string="Rasm"/>
                                    <field name="caption"/>
                                    <field name="stage_id"/>
                                    <field name="created_at" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menus -->
    <menuitem id="menu_construction_daily_photo_today"
              name="Rasmlar (Bugungi)"
              parent="menu_construction_kirim_root"
              action="action_construction_daily_photo_today"
              sequence="30"/>

    <menuitem id="menu_construction_daily_photo_all"
              name="Barcha rasmlar"
              parent="menu_construction_kirim_root"
              action="action_construction_daily_photo_all"
              sequence="40"/>
</odoo>
