<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_construction_material_request_batch_tree" model="ir.ui.view">
            <field name="name">construction.material.request.batch.tree</field>
            <field name="model">construction.material.request.batch</field>
            <field name="arch" type="xml">
                <tree string="Material So‘rovlari (Batch)" decoration-info="state == 'draft'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="requester_id"/>
                    <field name="task_id"/>
                    <field name="date"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-warning="state == 'priced'" decoration-success="state == 'approved'" decoration-danger="state == 'rejected'"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_construction_material_request_batch_form" model="ir.ui.view">
            <field name="name">construction.material.request.batch.form</field>
            <field name="model">construction.material.request.batch</field>
            <field name="arch" type="xml">
                <form string="Material So‘rovi">
                    <header>
                        <button name="action_reset_to_draft" string="Qayta yuborish" type="object" class="oe_highlight" invisible="state not in ('draft', 'rejected')" groups="project.group_project_manager"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,priced,approved,rejected"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_delivery"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-truck"
                                    invisible="state != 'approved'">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Yetkazib berish</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="requester_id"/>
                                <field name="task_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="delivery_state" widget="badge" decoration-warning="delivery_state == 'purchased'" decoration-info="delivery_state == 'in_transit'" decoration-success="delivery_state == 'delivered'" invisible="state != 'approved'"/>
                                <field name="delivery_updated_at" invisible="state != 'approved'"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Materiallar">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="product_name"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total_price" sum="Jami"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_construction_material_request_batch" model="ir.actions.act_window">
            <field name="name">Material So‘rovlari</field>
            <field name="res_model">construction.material.request.batch</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Yangi material so‘rovi yarating
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_construction_material_request_batch"
                  name="So'rovlar"
                  parent="menu_construction_root"
                  action="action_construction_material_request_batch"
                  sequence="35"/>

    </data>
</odoo>
