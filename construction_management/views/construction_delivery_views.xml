<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Delivery Form View -->
        <record id="view_construction_material_delivery_form" model="ir.ui.view">
            <field name="name">construction.material.delivery.form</field>
            <field name="model">construction.material.delivery</field>
            <field name="arch" type="xml">
                <form string="Material Yetkazib Berish">
                    <header>
                        <button name="action_set_purchased" string="Sotib olindi" type="object" class="btn-warning" invisible="state == 'purchased'" groups="base.group_user"/>
                        <button name="action_set_in_transit" string="Yo‘lda" type="object" class="btn-primary" invisible="state == 'in_transit'" groups="base.group_user"/>
                        <button name="action_set_delivered" string="Yetkazildi" type="object" class="btn-success" invisible="state == 'delivered'" groups="base.group_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="purchased,in_transit,delivered"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="batch_id"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="project_id"/>
                                <field name="updated_by"/>
                                <field name="updated_at"/>
                            </group>
                            <group>
                                <field name="note"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Materiallar">
                                <field name="line_ids">
                                    <tree>
                                        <field name="product_name"/>
                                        <field name="quantity"/>
                                        <field name="unit_price"/>
                                        <field name="total_price"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Tarix">
                                <field name="log_ids">
                                    <tree string="O'zgarishlar tarixi" default_order="create_date desc" create="false" edit="false" delete="false">
                                        <field name="old_state"/>
                                        <field name="new_state"/>
                                        <field name="changed_by"/>
                                        <field name="changed_at"/>
                                        <field name="source"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Delivery Kanban View -->
        <record id="view_construction_material_delivery_kanban" model="ir.ui.view">
            <field name="name">construction.material.delivery.kanban</field>
            <field name="model">construction.material.delivery</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_mobile" sample="1">
                    <field name="batch_id"/>
                    <field name="project_id"/>
                    <field name="state"/>
                    <field name="updated_at"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="batch_id"/>
                                        </strong>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="project_id"/>
                                        </span>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="state" widget="label_selection" options="{'classes': {'purchased': 'warning', 'in_transit': 'primary', 'delivered': 'success'}}"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left text-muted">
                                        <i class="fa fa-clock-o" title="Updated"/> <field name="updated_at"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Delivery Tree View -->
        <record id="view_construction_material_delivery_tree" model="ir.ui.view">
            <field name="name">construction.material.delivery.tree</field>
            <field name="model">construction.material.delivery</field>
            <field name="arch" type="xml">
                <tree string="Yetkazib Berish" decoration-warning="state == 'purchased'" decoration-info="state == 'in_transit'" decoration-success="state == 'delivered'" default_order="updated_at desc">
                    <field name="batch_id"/>
                    <field name="project_id"/>
                    <field name="state" widget="badge" decoration-warning="state == 'purchased'" decoration-info="state == 'in_transit'" decoration-success="state == 'delivered'"/>
                    <field name="updated_at"/>
                    <field name="updated_by"/>
                </tree>
            </field>
        </record>

        <!-- Audit Log Tree View -->
        <record id="view_construction_material_delivery_log_tree" model="ir.ui.view">
            <field name="name">construction.material.delivery.log.tree</field>
            <field name="model">construction.material.delivery.log</field>
            <field name="arch" type="xml">
                <tree string="O'zgarishlar Tarixi" create="false" edit="false" delete="false">
                    <field name="delivery_id"/>
                    <field name="old_state"/>
                    <field name="new_state"/>
                    <field name="changed_by"/>
                    <field name="changed_at"/>
                    <field name="source"/>
                    <field name="note"/>
                </tree>
            </field>
        </record>

        <!-- Audit Log Menu Action -->
        <record id="action_construction_delivery_logs" model="ir.actions.act_window">
            <field name="name">Yetkazib berish tarixi</field>
            <field name="res_model">construction.material.delivery.log</field>
            <field name="view_mode">tree</field>
        </record>

        <!-- Delivery Dashboard Action -->
        <record id="action_construction_delivery_dashboard" model="ir.actions.act_window">
            <field name="name">Yetkazib berish holati</field>
            <field name="res_model">construction.material.delivery</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Hozircha yetkazib berish ma'lumotlari yo‘q.
                </p>
            </field>
        </record>

        <!-- Parent Menu -->
        <menuitem id="menu_construction_delivery_root"
                  name="Yetkazib berish"
                  parent="menu_construction_root"
                  sequence="40"/>

        <!-- Menu Item (Dashboard) -->
        <menuitem id="menu_construction_delivery_dashboard"
                  name="Umumiy ko'rinish"
                  parent="menu_construction_delivery_root"
                  action="action_construction_delivery_dashboard"
                  sequence="10"/>

        <!-- Menu Item (Admin Only Logs) -->
        <menuitem id="menu_construction_delivery_logs"
                  name="Tarix"
                  parent="menu_construction_delivery_root"
                  action="action_construction_delivery_logs"
                  groups="project.group_project_manager"
                  sequence="20"/>

    </data>
</odoo>
