    <!-- Task Kanban View -->
    <record id="view_construction_stage_task_kanban" model="ir.ui.view">
        <field name="name">construction.stage.task.kanban</field>
        <field name="model">construction.stage.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column" records_draggable="0">
                <field name="name"/>
                <field name="stage_id"/>

                <field name="total_cost"/>
                <field name="progress"/>
                <field name="limit_content"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                     <!-- Progress Bar -->
                                     <div t-if="record.name.raw_value == 'ÐžÐ¿Ð»Ð°Ñ‚Ð° Ð¼Ð°ÑÑ‚ÐµÑ€Ð°Ð¼ Ð·Ð° Ñ€Ð°Ð±Ð¾Ñ‚Ñ‹'" class="d-flex align-items-center w-100">
                                          <field name="progress" widget="progressbar"/>
                                     </div>
                                </div>
                            </div>
                            
                            <div class="mt-2 text-primary" t-if="record.name.raw_value != 'Rasmlar'">
                                <strong>Jami: </strong> <field name="total_cost" widget="monetary"/>
                            </div>

                             <div class="mt-2 border-top pt-2">
                                <a type="button" role="button" data-bs-toggle="collapse" t-attf-data-bs-target="#task_fold_{{record.id.raw_value}}" class="btn btn-link p-0 text-decoration-none text-muted">
                                    <i class="fa fa-chevron-down me-1"/> Tafsilotlar
                                </a>
                                <div class="collapse mt-2" t-attf-id="task_fold_{{record.id.raw_value}}">
                                    <div class="small">
                                         <field name="limit_content" widget="html"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
